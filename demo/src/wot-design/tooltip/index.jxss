.wd-tooltip{position:relative;display:inline-block}.wd-tooltip__pos{position:absolute;min-width:138px;min-height:36px;font-size:14px;-webkit-backdrop-filter:blur(10px);backdrop-filter:blur(10px);background-clip:padding-box;border-radius:8px;background:rgba(38,39,40,.8);color:#fff;text-align:center;box-sizing:border-box;z-index:1}.wd-tooltip__hidden{left:-100vw;bottom:-100vh;visibility:hidden}.wd-tooltip__container{line-height:18px;font-size:14px}.wd-tooltip__inner{padding:9px 20px;white-space:nowrap;line-height:18px}.wd-tooltip__close-icon{font-size:12px;position:absolute;right:-8px;top:-10px;transform:scale(.5);padding:10px}.wd-tooltip__arrow{position:absolute;width:0;height:0}.wd-tooltip__arrow-down{border-top:9px solid rgba(38,39,40,.8);bottom:-9px}.wd-tooltip__arrow-down,.wd-tooltip__arrow-up{border-left:9px solid transparent;border-right:9px solid transparent;transform:translateX(-50%)}.wd-tooltip__arrow-up{border-bottom:9px solid rgba(38,39,40,.8);top:-9px}.wd-tooltip__arrow-left{border-right:9px solid rgba(38,39,40,.8);left:-9px}.wd-tooltip__arrow-left,.wd-tooltip__arrow-right{border-top:9px solid transparent;border-bottom:9px solid transparent;transform:translateY(-50%)}.wd-tooltip__arrow-right{border-left:9px solid rgba(38,39,40,.8);right:-9px}