.wd-search{display:flex;padding:10px 0 10px 15px;align-items:center;background:#fff}.wd-search__block{background-color:#f5f5f5;border-radius:15px}.wd-search__block,.wd-search__field{flex:1;display:flex;flex-direction:row;align-items:center;position:relative}.wd-search__input{flex:1;height:30px;box-sizing:border-box;padding:0 32px 0 42px;border:none;line-height:14px;background:transparent;font-size:14px;-webkit-appearance:none;outline:none;color:#262626;z-index:0;overflow:hidden;text-overflow:ellipsis;white-space:nowrap}.wd-search__input::-webkit-search-cancel-button{-webkit-appearance:none}.wd-search__cover{position:absolute;top:0;z-index:1;width:100%;height:30px;background-color:#f5f5f5;line-height:30px;font-size:14px;border-radius:15px;flex-direction:row;justify-content:center;align-items:center}.wd-search__search-icon{margin-right:8px;color:#d9d9d9;font-size:14px;height:30px}.wd-search__search-left-icon{position:absolute;display:inline-block;height:30px;line-height:30px;top:50%;left:16px;transform:translateY(-50%);color:#d9d9d9;font-size:14px}.wd-search__placeholder-txt{color:#bfbfbf;font-size:14px}.wd-search__clear{position:absolute;right:0;padding:6px 9px 6px 7px;color:rgba(0,0,0,.65)}.wd-search__clear-icon{vertical-align:middle}.wd-search__cancel{padding:0 15px 0 10px;height:30px;line-height:30px;font-size:16px;color:rgba(0,0,0,.65);-webkit-tap-highlight-color:transparent}.wd-search.is-light{background:#f5f5f5}.wd-search.is-light .wd-search__block,.wd-search.is-light .wd-search__cover{background:#fff}.wd-search.is-without-cancel{padding-right:15px}