.wd-notice-bar{display:flex;padding:9px 20px 9px 15px;align-items:center;font-size:12px;border-radius:8px;position:relative;box-sizing:border-box}.wd-notice-bar.is-warning{background:#fff6c8;color:#f0883a}.wd-notice-bar.is-info{background:#f4f9ff;color:#4d80f0}.wd-notice-bar.is-danger{background:#feeced;color:#fa4350}.wd-notice-bar__prefix{padding-right:4px;width:18px;height:18px;line-height:18px}.wd-notice-bar__suffix{text-align:center;width:18px;height:18px;line-height:18px;display:inline-block;background-color:rgba(0,0,0,.15);color:#fff;padding:0;border-radius:0 8px 0 4px;position:absolute;right:0;top:0}.wd-notice-bar__suffix i{font-size:14px;line-height:18px;display:inline-block;vertical-align:bottom}.wd-notice-bar__wrap{position:relative;flex:1;height:18px;overflow:hidden;line-height:18px}.wd-notice-bar__content{position:absolute;white-space:nowrap}.wd-notice-bar__content--play{animation:a linear both}.wd-notice-bar__content--play-infinite{animation:a linear infinite both}.wd-notice-bar--ellipse .wd-notice-bar__content{position:static;overflow:hidden;text-overflow:ellipsis;white-space:nowrap}.wd-notice-bar--wrap .wd-notice-bar__wrap{height:auto}.wd-notice-bar--wrap .wd-notice-bar__content{position:static;white-space:normal}@keyframes a{to{transform:translate3d(-100%,0,0)}}