.wd-pager{-webkit-user-select:none;-moz-user-select:none;-ms-user-select:none;user-select:none;background-color:#fff}.wd-pager__content{display:flex;justify-content:flex-start;align-items:center;padding:10px 15px}.wd-pager__message{text-align:center;color:rgba(0,0,0,.69);font-size:12px;padding:1px 0 16px}.wd-pager__nav{min-width:60px}.wd-pager__nav--active{color:rgba(0,0,0,.65)}.wd-pager__nav--disabled{color:rgba(0,0,0,.15)}.wd-pager__size{flex:1;text-align:center;font-size:12px}.wd-pager__separator{padding:0 4px}.wd-pager__left{transform:rotate(180deg) translateY(1px);display:inline-block}.wd-pager__current{color:#4d80f0}