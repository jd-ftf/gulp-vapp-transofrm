.wd-switch{display:inline-block;position:relative;width:51px;height:32px;border-radius:28px;background:linear-gradient(315deg,#f2f2f2,#dadada 100%,#668df8 0);transition:all .3s}.wd-switch__checkbox{position:absolute;width:0;height:0;opacity:0;margin:0}.wd-switch__circle{box-sizing:border-box;position:absolute;display:inline-block;width:28px;height:28px;top:2px;left:2px;background:#fff;border:1px solid #e5e5e5;border-radius:50%;transition:left .3s ease-out;box-shadow:0 2px 4px 0 hsla(0,0%,61%,.5)}.wd-switch.is-checked{background:linear-gradient(315deg,#4f7cf8,#668df8);border-color:linear-gradient(315deg,#4f7cf8,#668df8)}.wd-switch.is-checked .wd-switch__circle{left:21px;box-shadow:0 2px 4px 0 rgba(0,83,162,.5)}.wd-switch.is-disabled{opacity:.5}