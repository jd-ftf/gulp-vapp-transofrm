.wd-popover{position:relative;display:inline-block}.wd-popover__icon{vertical-align:middle;font-size:18px;margin-right:5px}.wd-popover__menu-inner{padding:15px 0;border-top:1px solid rgba(0,0,0,.09)}.wd-popover__menu{display:inline-block;padding:0 15px;white-space:nowrap;z-index:2;position:relative;background:#fff;border-radius:4px}.wd-popover__pos{position:absolute;box-sizing:border-box;background-clip:padding-box;text-align:center;min-height:36px;z-index:2;line-height:18px;font-size:14px;border-radius:4px;transition:opacity .2s;background:#fff;box-shadow:0 2px 10px 0 rgba(0,0,0,.1);color:rgba(0,0,0,.85)}.wd-popover__hidden{left:-100vw;visibility:hidden}.wd-popover__container{position:relative;line-height:18px;font-size:14px}.wd-popover__inner{position:relative;white-space:nowrap;padding:15px;line-height:18px;z-index:2;background-color:#fff;border-radius:4px}.wd-popover__close-icon{font-size:12px;position:absolute;right:-8px;top:-10px;transform:scale(.5);padding:10px}.wd-popover__arrow{position:absolute;width:6px;height:6px;z-index:1}.wd-popover__arrow-down{transform:translateX(-50%);bottom:0}.wd-popover__arrow-down:after{content:"";width:6px;height:6px;background-color:#fff;position:absolute;bottom:-3px;transform:rotate(45deg);box-shadow:0 2px 10px 0 rgba(0,0,0,.2)}.wd-popover__arrow-up{transform:translateX(-50%)}.wd-popover__arrow-up:after{content:"";width:6px;height:6px;background-color:#fff;position:absolute;top:-3px;transform:rotate(45deg);box-shadow:0 2px 10px 0 rgba(0,0,0,.2)}.wd-popover__arrow-left{transform:translateY(-50%)}.wd-popover__arrow-left:after{content:"";width:6px;height:6px;background-color:#fff;position:absolute;left:-3px;transform:rotate(45deg);box-shadow:0 2px 10px 0 rgba(0,0,0,.2)}.wd-popover__arrow-right{transform:translateY(-50%)}.wd-popover__arrow-right:after{content:"";width:6px;height:6px;background-color:#fff;position:absolute;right:-3px;transform:rotate(45deg);box-shadow:0 2px 10px 0 rgba(0,0,0,.2)}