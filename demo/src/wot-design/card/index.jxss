.wd-card{padding:15px 15px 16px;background-color:#fff;line-height:1.1;margin-left:15px;margin-right:15px;border-radius:8px;box-shadow:0 4px 8px 0 rgba(0,0,0,.02);font-size:14px;margin-bottom:12px}.wd-card.is-rectangle{margin-left:0;margin-right:0;border-radius:0;box-shadow:none;padding:15px 15px 12px}.wd-card__title{color:rgba(0,0,0,.85);font-size:16px}.wd-card__title.is-rectangle{font-size:14px}.wd-card__content{color:rgba(0,0,0,.45);line-height:20px;margin:13px 0 12px}.wd-card__content.is-rectangle{padding:17px 0 16px;margin:14px 0 12px;border-top:1px solid rgba(0,0,0,.09);border-bottom:1px solid rgba(0,0,0,.09)}.wd-card__footer{text-align:right}