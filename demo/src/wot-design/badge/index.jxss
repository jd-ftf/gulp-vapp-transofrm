.wd-badge{position:relative;vertical-align:middle;display:inline-block}.wd-badge__content{display:inline-block;height:16px;line-height:16px;padding:0 5px;background-color:#fa4350;border-radius:10px;color:#fff;font-size:12px;text-align:center;white-space:nowrap;border:2px solid #fff;font-weight:500}.wd-badge__content.is-fixed{position:absolute;transform:translateY(-50%) translateX(50%)}.wd-badge__content.is-dot{height:6px;width:6px;padding:0;border-radius:50%}.wd-badge__content--primary{background-color:#4d80f0}.wd-badge__content--success{background-color:#34d19d}.wd-badge__content--warning{background-color:#f0883a}.wd-badge__content--info{background-color:#909399}.wd-badge__content--danger{background-color:#fa4350}