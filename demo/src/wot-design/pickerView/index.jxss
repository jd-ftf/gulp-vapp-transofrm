.wd-picker-view{position:relative;padding:10px 0}.wd-picker-view__columns{position:relative;display:flex;background:#fff;overflow:hidden;align-items:center}.wd-picker-view__mask{position:absolute;top:0;left:0;width:100%;height:100%;background:linear-gradient(180deg,hsla(0,0%,100%,.9),hsla(0,0%,100%,.25)),linear-gradient(0deg,hsla(0,0%,100%,.9),hsla(0,0%,100%,.25));background-position:top,bottom;background-repeat:no-repeat;z-index:1;pointer-events:none;filter:blur(4px)}.wd-picker-view__loading{position:absolute;display:flex;top:0;right:0;bottom:0;left:0;align-items:center;justify-content:center;z-index:2;background:hsla(0,0%,100%,.8)}.wd-picker-view-column{flex:1;font-size:16px;color:rgba(0,0,0,.85);text-align:center;transition-timing-function:cubic-bezier(.28,.8,.63,1)}.wd-picker-view-column__item--active{font-size:18px}.wd-picker-view-column__item--disabled{color:rgba(0,0,0,.25)}