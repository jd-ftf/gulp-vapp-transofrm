.wd-drop-menu{box-sizing:border-box;color:#262626;font-size:14px;position:relative}.wd-drop-menu__list{display:flex;text-align:center;background-color:#fff}.wd-drop-menu__item{flex:1;min-width:0;height:48px;line-height:48px;text-align:center}.wd-drop-menu__item.is-active{font-weight:500}.wd-drop-menu__item.is-active .wd-drop-menu__item-title:after{opacity:1}.wd-drop-menu__item.is-active .wd-drop-menu__arrow{transform:scale(.6) rotate(-180deg);transform-origin:center center}.wd-drop-menu__item.is-disabled{color:rgba(0,0,0,.25)}.wd-drop-menu__item-title{position:relative;display:inline-block;max-width:100%;padding:0 15px;box-sizing:border-box}.wd-drop-menu__item-title:after{position:absolute;content:"";width:19px;height:3px;bottom:6px;left:50%;transform:translate(-50%);background:linear-gradient(315deg,#517cf0,#769ef5);border-radius:3px;transition:opacity .15s;opacity:0}.wd-drop-menu__item-title-text{position:relative;overflow:hidden;text-overflow:ellipsis;white-space:nowrap}.wd-drop-menu__arrow{position:absolute;display:inline-block;top:0;right:-4px;transition:transform .3s;transform:scale(.6)}