.wd-progress{width:100%;height:3px;display:flex;align-items:center;padding:9px 0 8px}.wd-progress__outer{display:block;position:relative;flex:1;height:3px;border-radius:1.5px;background:#e5e5e5}.wd-progress__inner{display:block;position:absolute;top:0;left:0;height:100%;border-radius:1.5px;background:linear-gradient(315deg,#517cf0,#769ef5);transition-property:width;transition-timing-function:linear;font-size:18px}.wd-progress__inner.is-danger{background:linear-gradient(315deg,#e04350,#ff5964)}.wd-progress__inner.is-success{background:linear-gradient(315deg,#20b080,#2bd69d)}.wd-progress__label{width:30px;margin-left:9px;color:#333;font-size:14px}.wd-progress__icon{font-size:18px}.wd-progress__icon.is-danger{color:#fa4350}.wd-progress__icon.is-success{color:#34d19d}