.wd-action-sheet{border-radius:16px 16px 0 0}.wd-action-sheet__actions{padding:8px 0}.wd-action-sheet__action{position:relative;display:block;width:100%;height:48px;line-height:48px;color:rgba(0,0,0,.85);font-size:16px;text-align:center;border:none;background:#fff;outline:none;border-radius:0}.wd-action-sheet__action:after{display:none}.wd-action-sheet__action:active{background:#f5f5f5}.wd-action-sheet__action--disabled{color:rgba(0,0,0,.25)}.wd-action-sheet__action--loading{display:flex;align-items:center;justify-content:center;line-height:normal}.wd-action-sheet__name{display:inline-block}.wd-action-sheet__subname{display:inline-block;margin-left:4px;font-size:12px;color:rgba(0,0,0,.45)}.wd-action-sheet__cancel{display:block;width:calc(100% - 48px);line-height:44px;padding:0;color:#131415;font-size:16px;text-align:center;border-radius:22px;border:none;background:#f0f0f0;outline:none;margin:0 auto 24px;font-weight:500}.wd-action-sheet__cancel:active{background:#f5f5f5}.wd-action-sheet__cancel:after{display:none}.wd-action-sheet__header{color:rgba(0,0,0,.85);position:relative;height:64px;line-height:64px;text-align:center;font-size:16px;font-weight:500}.wd-action-sheet__close{position:absolute;top:25px;right:15px;color:rgba(0,0,0,.65);font-size:16px;transform:rotate(-45deg);line-height:1.1}.wd-action-sheet__panels{height:84px;overflow-y:hidden}.wd-action-sheet__panels:first-of-type{margin-top:20px}.wd-action-sheet__panels:last-of-type{margin-bottom:12px}.wd-action-sheet__panels-content{display:flex;overflow-x:auto;-webkit-overflow-scrolling:touch}.wd-action-sheet__panel{width:88px;flex:0 0 auto;display:inline-block;padding:12px 0 11px}.wd-action-sheet__panel-img{display:block;width:40px;height:40px;margin:0 auto;margin-bottom:7px;border-radius:4px}.wd-action-sheet__panel-title{font-size:12px;line-height:1.2;text-align:center;color:rgba(0,0,0,.85);overflow:hidden;text-overflow:ellipsis;white-space:nowrap}