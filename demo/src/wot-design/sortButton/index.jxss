.wd-sort-button{display:inline-block}.wd-sort-button__wrapper{font-size:14px;color:#262626;word-break:break-all;white-space:nowrap}.wd-sort-button__left{position:relative;display:inline-block;height:48px;line-height:48px;vertical-align:middle}.wd-sort-button__left:after{position:absolute;content:"";width:19px;height:3px;bottom:6px;left:50%;transform:translate(-50%);background:linear-gradient(315deg,#517cf0,#769ef5);border-radius:1.5px;transition:opacity .15s;opacity:0}.wd-sort-button__left.is-active{font-weight:500}.wd-sort-button__left.is-active:after{opacity:1}.wd-sort-button__left.is-active .wd-sort-button__right{justify-content:center}.wd-sort-button__right{display:inline-block;min-width:14px;margin-left:2px;vertical-align:middle}.wd-sort-button__right.is-active .wd-sort-button__icon-down,.wd-sort-button__right.is-active .wd-sort-button__icon-up{transform:scale(.57143)}.wd-sort-button__icon-up{display:block!important;line-height:1.1;transform:scale(.57143) translateY(7px)}.wd-sort-button__icon-down{display:block!important;line-height:1.1;transform:scale(.57143) translateY(-7px)}